{
  "name": "laces-simple-cdlc-request-bot",
  "version": "1.0.0",
  "description": "Lace's Simple CDLC Request Bot - A dual-platform (Twitch + YouTube) song request bot for Rocksmith streams",
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron .",
    "dev": "tsc && electron .",
    "watch": "tsc -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.lace.cdlcrequestbot",
    "productName": "Laces Simple CDLC Request Bot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "keywords": [
    "twitch",
    "youtube",
    "rocksmith",
    "customsforge",
    "song-requests"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ngrok/ngrok": "^1.7.0",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "localtunnel": "^2.0.2",
    "tmi.js": "^1.8.5"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/tmi.js": "^1.8.6",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
