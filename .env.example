YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REFRESH_TOKEN=your_refresh_token

# Web Server Configuration
WEB_PORT=3000
WEB_BASE_URL=http://localhost:3000

# Bot Configuration
MAX_REQUESTS_PER_USER=3
REQUEST_COOLDOWN_SECONDS=30
